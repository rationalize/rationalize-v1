{
    "database": "rationalize-db",
    "collection": "UserProfiles",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "userId": "%%user.id"
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "additional_fields": {}
        }
    ],
    "schema": {
        "title": "UserProfile",
        "required": [
            "firstName",
            "lastName",
            "use"
        ],
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "userId": {
                "bsonType": "string"
            },
            "firstName": {
                "bsonType": "string"
            },
            "lastName": {
                "bsonType": "string"
            },
            "use": {
                "bsonType": "string",
                "enum": [
                    "individual",
                    "professional"
                ]
            },
            "company": {
                "bsonType": "string"
            },
            "title": {
                "bsonType": "string"
            },
            "work": {
                "bsonType": "string"
            }
        }
    }
}
